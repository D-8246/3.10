@using class_3._10.Models
@model EditViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body>
    <div>
        <div class="container mt-5">
            <form method="post" action="/People/Update">
                <input type="hidden" name="id" value="@Model.person.Id" />
                <div class="col-md-6 offset-md-3 mt-5">
                    <input type="text" value="@Model.person.FirstName" name="firstName" class="form-control" />
                </div>
                <div class="col-md-6 offset-md-3 mt-3">
                    <input type="text" value="@Model.person.LastName" name="lastName" class="form-control" />
                </div>
                <div class="col-md-6 offset-md-3 mt-3">
                    <input type="text"value="@Model.person.Age" name="age" class="form-control" />
                </div>
                <div class="col-md-6 offset-md-3 mt-3">
                    <input type="hidden" value="@Model.person.Id" name="id" />
                    <button class="btn btn-dark w-100">Update</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
